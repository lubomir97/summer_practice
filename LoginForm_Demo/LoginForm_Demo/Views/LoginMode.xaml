<Window x:Class="LoginForm_Demo.Views.LoginMode"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoginForm_Demo.Views"
        mc:Ignorable="d"
        Title="Change mode" WindowStartupLocation="CenterOwner" Height="250" Width="400">
    <Grid>
        <Label Content="Login" HorizontalAlignment="Left" Margin="11,50,0,0" VerticalAlignment="Top" Width="118"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="11,101,0,0" VerticalAlignment="Top" Width="118"/>
        <TextBox x:Name="Login_mode" HorizontalAlignment="Left" Height="23" Margin="150,53,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="233"/>
        <PasswordBox x:Name="password_mode" HorizontalAlignment="Left" Margin="150,101,0,0" VerticalAlignment="Top" Width="232" Height="26"/>
        <Button x:Name="Sign_mode" Click="Sign_mode_Click" Content="Sign In" HorizontalAlignment="Left" Margin="150,160,0,0" VerticalAlignment="Top" Width="100" Background="#FF15E400"/>
        <Button x:Name="Exit_mode" Click="Exit_mode_Click" Content="Exit" HorizontalAlignment="Left" Margin="282,160,0,0" VerticalAlignment="Top" Width="100"/>

    </Grid>
</Window>
